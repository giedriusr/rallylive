<h4>Dalyvių sąrašas</h4>

<table class="table table-striped">
  <tr>
    <th width="20px">St.</th>
    <th>Ekipažas<br>Komanda</th>
    <th>Automobilis</th>
    <th>Įsk</th>
    <th>Šalis</th>
  </tr>
  <% @participants.each do |participant| %>
    <tr>
      <td><span class="label label-important"><%= participant.start_number %></span></td>
      <td><%= participant.driver_name %><br><%= participant.co_driver_name %><br><u><%= participant.team_name %></u></td>
      <td><%= participant.car_name %></td>
      <td><%= participant.classification %></td>
      <td><%= participant.country_code %></td>
    </tr>
  <% end %>
</table>
<%= render 'layouts/print' %>
<hr>
<% if Rails.env.production? %>
  <h6>Komentarai</h6>
  <div class="fb-comments" data-href="http://www.raceonline.lt/dalyviu_sarasas" data-num-posts="10"></div>
<% end %>