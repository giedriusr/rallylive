  <%= link_to(image_tag("/gr35.jpg"), '/gr35.jpg') %><br>
  <%= link_to(image_tag("/gr67.jpg"), '/gr67.jpg') %><br>
  <%= link_to(image_tag("/gr8.jpg"), '/gr8.jpg') %><br>
